{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block main %}

        <div class="row m-5">

        <div class="rounded col-4 " style="width: 18rem;">
            <img src="{{ asset('uploads/pictureUser/' ~ user.pictureUserFileName) }}" class="card-img-top" alt="...">
            <h3 class="text-center mb-5">{{ user.pseudo }}</h3>
        </div>
            <div class="col-8">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.name }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ user.firstName }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ user.phoneNumber }}</td>
                    </tr>

                    <tr>
                        <th>Campus</th>
                        <td>{{ user.campus.name }}</td>
                    </tr>

                    </tbody>
                </table>
                <div class=" d-flex justify-content-center mb-5">
                    <a href="{{ path('home_member') }}" type="button" class="btn btn-lg btn-dark ">Retour</a>
                </div>
            </div>
            </div>


{% endblock %}
