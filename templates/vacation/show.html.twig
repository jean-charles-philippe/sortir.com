{% extends 'base.html.twig' %}

{% block title %}Vacation{% endblock %}

{% block body %}
    <h1>Vacation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vacation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ vacation.name }}</td>
            </tr>
            <tr>
                <th>Vacation_date</th>
                <td>{{ vacation.vacationDate ? vacation.vacationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Vacation_limitDate</th>
                <td>{{ vacation.vacationLimitDate ? vacation.vacationLimitDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PlaceNumber</th>
                <td>{{ vacation.placeNumber }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ vacation.duration }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ vacation.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('vacation_index') }}">back to list</a>

    <a href="{{ path('vacation_edit', {'id': vacation.id}) }}">edit</a>

    {{ include('vacation/_delete_form.html.twig') }}
{% endblock %}
