{% extends 'base.html.twig' %}

{% block title %}Vacation index{% endblock %}

{% block main %}
    <div class="container-fluid d-block">

        <h2>Filtrer les sorties</h2>

        <div class="mb-5 justify-content-between shadow p-3 mb-5  ">
            <form method="post">
                <div class="row ">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Campus</label>
                            <select class="form-control" id="exampleFormControlSelect1" name="campus">
                                {% for campus in campuses %}
                                <option value="{{ campus.id }}" {% if app.session.get('campusSelected') ==  campus.id %}selected{% endif %}>{{ campus.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="button-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" id="button-addon2">Button</button>
                            </div>
                        </div>
                        <div class="form-group d-flex">
                            <p class="mr-2">Entre</p>
                            <input type="date" class="form-control" id="exampleInputPassword1">
                            <p class="mr-2 ml-2"> et </p>
                            <input type="date" class="form-control" id="exampleInputPassword1">
                        </div>
                    </div>
                    <div class="col-3 offset-1">
                        <form action="">
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="sortHost" {% if app.session.get('hostSelected') == "on" %}checked{% endif %}>
                                <label class="form-check-label" for="exampleCheck1" >Sorties dont je suis l'organisateur/trice</label>
                            </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Sorties auquelles je suis inscrit/e</label>
                            </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Sorties auquelles je ne suis pas inscrit/e</label>
                            </div>
                            <div class="form-group form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1" name="sortDateFinished" {% if app.session.get('dateFinishedSelected') == "on" %}checked{% endif %}>
                                <label class="form-check-label" for="exampleCheck1">Sorties passées</label>
                            </div>
                        </form>
                    </div>
                    <div class="col-2 d-flex align-items-center justify-content-center">
                        <input type="submit" class="btn btn-dark btn-lg" value="Rechercher">
                    </div>
                </div>
            </form>
        </div>

        <div class="mb-5 shadow p-3 mb-5 ">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">Nom de la sortie</th>
                    <th scope="col">Date de la sortie</th>
                    <th scope="col">Clôture</th>
                    <th scope="col">Inscrits/Places</th>
                    <th scope="col">Etat</th>
                    <th scope="col">Inscrit</th>
                    <th scope="col">Organisateur</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>

                <tbody>
                {% for vacation in vacations %}
                    <tr>
                        <th scope="row">{{ vacation.name }}</th>
                        <td>{{ vacation.vacationDate|date("d/m/Y h:m:s") }}</td>
                        <td>{{ vacation.vacationLimitDate|date("d/m/Y") }}</td>
                        <td>{{ vacation.booked }} / {{ vacation.placeNumber }}</td>
                        <td>{{ vacation.state.tag }}</td>
                        <td>
                            {% if vacation.getParticipants().contains(app.user) %}
                            X
                            {% endif %}
                        </td>
                        <td><a href="{{ path('user_show', {'id': vacation.organiser.id}) }}" >{{ vacation.organiser }} </a> </td>
                        <td>
                            {% if vacation.state.tag  == "En Preparation" %}
                                <a href="" class="pr-1">Modifier</a>
                                <a href="" class="pl-1">Publier</a>
                            {%  endif %}
                            {% if vacation.state.tag == "Ouvert" and vacation.vacationLimitDate > date() and app.user.id != vacation.organiser.id  %}
                                <a href="{{ path('vacation_show', {"id": vacation.id}) }}" class="pr-1">Afficher</a>
                            {%  endif %}
                            {% if vacation.placeNumber != vacation.booked and vacation.state.tag == "Ouvert" %}
                                <a href="{{ path('home_inscription', {"id": vacation.id}) }}" class="pl-1">S'inscrire</a>
                            {% endif %}
                            {% if vacation.state.tag == "Ouvert" and vacation.vacationLimitDate < date() and app.user.id == vacation.organiser.id %}
                                <a href="{{ path('vacation_show', {"id": vacation.id}) }}" class="pr-1">Afficher</a>
                            {%  endif %}
                            {% if vacation.state.tag == "Ouvert" and vacation.vacationLimitDate > date() and app.user.id == vacation.organiser.id and vacation.booked == vacation.placeNumber %}
                                <a href="{{ path('vacation_show', {"id": vacation.id}) }}" class="pr-1">Afficher</a>
                                <a href="" class="pl-1">Annuler</a>
                            {%  endif %}
                            {% if vacation.state.tag == "Clôturé"%}
                                <a href="{{ path('vacation_show', {"id": vacation.id}) }}" class="pr-1">Afficher</a>
                            {%  endif %}
                        </td>
                    </tr>
                {% endfor %}


                </tbody>
            </table>
        </div>

        <div class="example-wrapper">
            <a href="{{ path('vacation_new') }}" type="button" class="btn btn-dark btn-lg">Créer une sortie</a>
        </div>
    </div>
{% endblock %}
